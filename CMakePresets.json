{
    "version": 3,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 21,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "dev",
            "displayName": "Dev (Ninja)",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_C_COMPILER": "C:/msys64/ucrt64/bin/clang.exe",
                "CMAKE_CXX_COMPILER": "C:/msys64/ucrt64/bin/clang++.exe",
                "CMAKE_RC_COMPILER": "C:/msys64/ucrt64/bin/windres.exe",
                "CMAKE_AR": "C:/msys64/ucrt64/bin/llvm-ar.exe",
                "CMAKE_RANLIB": "C:/msys64/ucrt64/bin/llvm-ranlib.exe",
                "CMAKE_C_COMPILER_TARGET": "x86_64-w64-mingw32",
                "CMAKE_CXX_COMPILER_TARGET": "x86_64-w64-mingw32",
                "CMAKE_EXE_LINKER_FLAGS": "-fuse-ld=lld",
                "CMAKE_SHARED_LINKER_FLAGS": "-fuse-ld=lld"
            }
        },
        {
            "name": "test",
            "displayName": "Tests Only (Ninja)",
            "inherits": "dev",
            "binaryDir": "${sourceDir}/build_test",
            "cacheVariables": {
                "BUILD_TESTING": "ON"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "dev",
            "displayName": "Build Dev",
            "configurePreset": "dev"
        },
        {
            "name": "test",
            "displayName": "Build Tests",
            "configurePreset": "test"
        }
    ],
    "testPresets": [
        {
            "name": "test",
            "displayName": "Run Tests",
            "configurePreset": "test",
            "output": {
                "outputOnFailure": true
            }
        }
    ]
}