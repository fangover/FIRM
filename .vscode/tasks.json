{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "CMake: Configure (Ninja)",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-S",
                "${workspaceFolder}",
                "-B",
                "${workspaceFolder}/build",
                "-G",
                "Ninja" // Change from MinGW Makefiles to Ninja
            ],
            "options": {
                "env": {
                    "PATH": "C:/msys64/ucrt64/bin;${env:PATH}"
                }
            },
            "group": "build",
            "problemMatcher": [],
            "presentation": {
                "reveal": "always"
            }
        },
        {
            "label": "CMake: Build (Ninja)",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "${workspaceFolder}/build",
                "--config",
                "Debug"
            ],
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ],
            "dependsOn": "CMake: Configure (Ninja)"
        },
        {
            "label": "Run",
            "type": "shell",
            "command": "${workspaceFolder}/build/bin/main.exe",
            "group": "build",
            "dependsOn": "CMake: Build (Ninja)",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        },
        {
            "label": "Build & Run",
            "dependsOn": [
                "CMake: Build (Ninja)",
                "Run"
            ],
            "group": "build",
            "problemMatcher": [],
            "dependsOrder": "sequence"
        },
        {
            "label": "Clean",
            "type": "shell",
            "command": "powershell",
            "args": [
                "-Command",
                "if (Test-Path ${workspaceFolder}/build) { Remove-Item -Recurse -Force ${workspaceFolder}/build }"
            ],
            "group": "build",
            "problemMatcher": [],
            "presentation": {
                "reveal": "always"
            }
        },
        {
            "label": "Rebuild",
            "dependsOn": [
                "Clean",
                "CMake: Configure (Ninja)",
                "CMake: Build (Ninja)"
            ],
            "group": "build",
            "dependsOrder": "sequence"
        },
        {
            "label": "Rebuild & Run",
            "dependsOn": [
                "Rebuild",
                "Run"
            ],
            "group": "build",
            "dependsOrder": "sequence"
        },
        {
            "label": "Test: Clean build_test",
            "type": "shell",
            "command": "powershell",
            "args": [
                "-Command",
                "if (Test-Path '${workspaceFolder}/build_test') { Remove-Item -Recurse -Force '${workspaceFolder}/build_test' }"
            ],
            "problemMatcher": [],
            "group": "build"
        },
        {
            "label": "Test: Configure (GoogleTest)",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-S",
                "${workspaceFolder}/ExternLib/test",
                "-B",
                "${workspaceFolder}/build_test",
                "-G",
                "Ninja",
                "-DCMAKE_EXPORT_COMPILE_COMMANDS=ON"
            ],
            "options": {
                "env": {
                    "PATH": "C:/msys64/ucrt64/bin;${env:PATH}"
                }
            },
            "group": "build",
            "problemMatcher": [],
            "presentation": {
                "reveal": "always"
            }
        },
        {
            "label": "Test: Build",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "${workspaceFolder}/build_test"
            ],
            "group": "build",
            "dependsOn": "Test: Configure (GoogleTest)",
            "problemMatcher": [],
            "presentation": {
                "reveal": "always"
            }
        },
        {
            "label": "Test: Run All (CTest)",
            "type": "shell",
            "command": "ctest",
            "args": [
                "--output-on-failure"
            ],
            "options": {
                "cwd": "${workspaceFolder}/build_test"
            },
            "group": "test",
            "dependsOn": "Test: Build",
            "problemMatcher": [],
            "presentation": {
                "reveal": "always"
            }
        },
        {
            "label": "Test: Rebuild & Run All",
            "dependsOn": [
                "Test: Clean build_test",
                "Test: Configure (GoogleTest)",
                "Test: Build",
                "Test: Run All (CTest)"
            ],
            "group": "build",
            "dependsOrder": "sequence",
            "problemMatcher": []
        },
        {
            "label": "Full Clean",
            "dependsOn": [
                "Clean",
                "Test: Clean build_test",
            ],
            "group": "build",
            "dependsOrder": "sequence",
            "problemMatcher": []
        }
    ]
}